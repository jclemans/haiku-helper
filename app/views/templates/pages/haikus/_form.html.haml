= form_for(@haiku) do |f|
  - if @haiku.errors.any?
    #error_explanation
      %h2
        = pluralize(@haiku.errors.count, "error")
        prohibited this haiku from being saved:
      %ul
        - @haiku.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :poem
    %br/
    = f.text_area :poem
  .actions
    = f.submit
